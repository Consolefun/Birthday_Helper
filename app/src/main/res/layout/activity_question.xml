<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgoundwindow"
    tools:context=".Question">
    <include
        android:id="@+id/toolbarquestion"

        layout="@layout/toolbarfood"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Enter your name below"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15dp"
        android:layout_marginTop="80dp"/>
    <EditText
        android:id="@+id/etTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:hint="Enter your name"
        android:inputType="textPersonName"
        android:textColor="@color/design_default_color_primary"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="When is your birthday?"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15dp"
        android:layout_marginTop="140dp"/>


    <Button
        android:id="@+id/btnNotify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/holo_blue_dark"
        android:layout_marginBottom="56dp"
        android:text="Set Date/Time" />

    <TextView
        android:id="@+id/Date_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"

        android:hint="Display Date"/>

    <TextView
        android:id="@+id/Time_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"

        android:hint="Display Time"
         />

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Time_view"
        android:layout_marginTop="20dp"
        android:text="What do you want to \ndo on your birhday? \n(Please choose below)"
        android:textSize="15dp"
        />

    <Button
        android:id="@+id/entertainment_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@android:color/holo_purple"
        android:layout_below="@+id/question"
        android:text="Open map " />

    <Button
        android:id="@+id/chill_relax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@android:color/holo_green_light"
        android:layout_below="@+id/entertainment_map"
        android:text="chill and relax " />

    <Button
        android:id="@+id/food_recipes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@android:color/holo_orange_light"
        android:layout_below="@+id/chill_relax"
        android:text="Cooking" />

    <Button
        android:id="@+id/sports_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@android:color/holo_red_light"
        android:layout_below="@+id/food_recipes"
        android:text="Sports" />



</RelativeLayout>
</ScrollView>